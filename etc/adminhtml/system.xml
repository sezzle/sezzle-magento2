<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="sezzlepay" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<div class="sezzle-payment-logo"></div><div class="sezzle-payment-byline">Buy Now, Pay Later.</div>]]></label>
                <fieldset_css>complex sezzle-payment-section</fieldset_css>
                <frontend_model>Sezzle\Sezzlepay\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
                <field id="simplepath" type="text" translate="label comment" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Sezzle\Sezzlepay\Block\Adminhtml\System\Config\Form\SezzleRegisterConfig</frontend_model>
                </field>
                <group id="sezzlepay_payment" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label><![CDATA[Payment Settings]]></label>
                    <!-- active -->
                    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/sezzlepay/active</config_path>
                    </field>
                    <!-- merchant country -->
                    <field id="merchant_country" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Merchant Country</label>
                        <source_model>Sezzle\Sezzlepay\Model\System\Config\Source\MerchantCountry</source_model>
                        <config_path>payment/sezzlepay/merchant_country</config_path>
                    </field>
                    <!-- title -->
                    <field id="title" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Title</label>
                        <config_path>payment/sezzlepay/title</config_path>
                    </field>
                    <!-- public key -->
                    <field id="public_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Public Key</label>
                        <comment>Look for this in your Sezzle Dashboard</comment>
                        <config_path>payment/sezzlepay/public_key</config_path>
                    </field>
                    <!-- private key -->
                    <field id="private_key" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Private Key</label>
                        <comment>Look for this in your Sezzle Dashboard</comment>
                        <config_path>payment/sezzlepay/private_key</config_path>
                    </field>
                    <!-- merchant id -->
                    <field id="merchant_id" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Merchant ID</label>
                        <comment>Look for this in your Sezzle Dashboard</comment>
                        <config_path>payment/sezzlepay/merchant_id</config_path>
                    </field>
                    <!--payment mode-->
                    <field id="payment_mode" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Payment Mode</label>
                        <source_model>Sezzle\Sezzlepay\Model\Config\Source\Payment\Mode</source_model>
                        <config_path>payment/sezzlepay/payment_mode</config_path>
                    </field>
                    <!-- log tracker -->
                    <field id="log_tracker" translate="label" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enable log tracker?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>If yes, all Sezzle actions will be logged</comment>
                        <config_path>payment/sezzlepay/log_tracker</config_path>
                    </field>
                    <!-- min checkout amount -->
                    <field id="min_checkout_amount" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Min Checkout Amount</label>
                        <validate>validate-not-negative-number</validate>
                        <comment>Hide Gateway based on this amount</comment>
                        <config_path>payment/sezzlepay/min_checkout_amount</config_path>
                    </field>
                    <!-- payment action -->
                    <field id="payment_action" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Payment Action</label>
                        <source_model>Sezzle\Sezzlepay\Model\Config\Source\Payment\PaymentAction</source_model>
                        <config_path>payment/sezzlepay/payment_action</config_path>
                    </field>
                    <!-- widget pdp -->
                    <field id="widget_pdp" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Add Widget Script in PDP?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Makes you enable Sezzle Widget Modal in PDP</comment>
                        <config_path>payment/sezzlepay/widget_pdp</config_path>
                    </field>
                    <!-- widget cart -->
                    <field id="widget_cart" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Add Widget Script in Cart Page?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Makes you enable Sezzle Widget Modal in Cart Page</comment>
                        <config_path>payment/sezzlepay/widget_cart</config_path>
                    </field>
                    <!-- tokenize -->
                    <field id="tokenize" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Allow Customer tokenization?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Makes you enable Customer tokenization</comment>
                        <config_path>payment/sezzlepay/tokenize</config_path>
                    </field>
                    <!-- checkout -->
                    <field id="checkout" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Allow Checkout?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Makes you enable creating Sezzle Checkout</comment>
                        <config_path>payment/sezzlepay/checkout</config_path>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
