<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <link src="Sezzle_Sezzlepay::js/sezzle_widget/installment-widget.js"/>
    </head>
    <body>
        <referenceBlock name="head.additional">
            <block class="Sezzle\Sezzlepay\Block\Widget\Installment" name="sezzle.widget.installment.view" template="installment.phtml"/>
        </referenceBlock>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="actions-toolbar" xsi:type="array">
                                    <item name="rendererList" xsi:type="array">
                                        <item name="sezzlepay" xsi:type="string">Sezzle_Sezzlepay/js/view/actions-toolbar/renderer/sezzle</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
